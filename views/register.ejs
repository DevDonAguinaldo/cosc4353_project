<% include partials/header %>

<div class="ui main text container segment" id="container">
    <div class="ui huge header" style="text-align: center;">REGISTER</div>
    <%if(message.type === 'error') {%>
        <div class="ui negative message">
            <i class="close icon"></i>
            <div class="header"><i class="exclamation icon"></i><%=messageHeader%></div>
            <div class="body"><%=messageBody%></div>
        </div>
    <%} else if(message.type === 'success') {%>
        <div class="ui success message">
            <i class="close icon"></i>
            <div class="header"><i class="check icon"></i><%=messageHeader%></div>
            <div class="body"><%=messageBody%></div>
        </div>
    <%}%>
    <form class="ui form" action="/register" method="POST">
        <%# Username %>
        <div class="field">
            <input type="text" name="registerusername" placeholder="Username" required>
        </div>
        <%# Initial Password %>
        <div class="field">
            <input type="password" name="registerpassword" placeholder="Password" required>
        </div>
        <%# Confirmation Password %>
        <div class="field">
            <input type="password" name="confirmpassword" placeholder="Confirm Password" required>
        </div>
        <%# Terms And Conditions %>
        <div class="field">
            <div class="ui checkbox">
                <input type="checkbox" name="termsandconditions" required>
                <label for="termsandconditions">I agree to the Terms and Conditions.</label>                
            </div>
        </div>
        <%# Buttons %>
        <button type="submit" class="ui green inverted button">Submit</button>
        <a href="/" class="ui red inverted button">Cancel</a>
    </form>
</div>

<% include partials/footer %>
